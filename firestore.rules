rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Business links can be read by anyone, but only created, updated,
    // or deleted by the authenticated user who owns them.
    match /business_links/{linkId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Reviews can be created by anyone.
    // They can only be read by the owner of the business they are associated with.
    match /reviews/{reviewId} {
      allow create: if true;
      allow read: if request.auth != null &&
                    exists(/databases/$(database)/documents/business_links/$(resource.data.businessId)) &&
                    get(/databases/$(database)/documents/business_links/$(resource.data.businessId)).data.userId == request.auth.uid;
      allow update, delete: if false; // Nobody can modify or delete for now
    }

    // A user can read, create, and update their own profile data.
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
  }
}
